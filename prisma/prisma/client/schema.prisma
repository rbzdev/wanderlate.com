generator client {
  provider      = "prisma-client-js"
  output        = "prisma/client"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid()) @map("_id")
  email         String   @unique
  firstname     String
  lastName      String
  phone         String
  birthDay      DateTime
  country       String?
  language      String?
  currency      String   @default("EUR")
  accountType   String // 'traveler' | 'host'
  password      String?
  loginProvider String   @default("email")
  isActive      Boolean  @default(true)

  books     Book[]
  trips     Trip[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Trip {
  id        String   @id @default(uuid()) @map("_id")
  userId    String
  title     String
  startDate DateTime
  endDate   DateTime
  travelers Int      @default(1)
  status    String   @default("planning") // 'planning' | 'confirmed' | 'completed' | 'cancelled'

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  bookings Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("trips")
}

model Booking {
  id          String  @id @default(uuid()) @map("_id")
  tripId      String
  type        String // 'flight' | 'car' | 'activity' | 'package' | 'lodging'
  supplierRef String?
  status      String  @default("pending") // 'pending' | 'held' | 'confirmed' | 'cancelled'
  price       Json? // { amount: number, currency: string }
  meta        Json? // Additional supplier-specific data

  trip Trip @relation(fields: [tripId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("bookings")
}

model Book {
  id           String   @id @default(uuid()) @map("_id")
  type         String?
  location     String
  checkinDate  DateTime
  checkoutDate DateTime
  authorId     String
  author       User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("books")
}
